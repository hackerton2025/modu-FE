{
  "manifest_version": 3,
  "name": "Modu",
  "version": "1.0.0",
  "description": "음성 명령을 통해 손쉽게 브라우저 내에서 원하는 작업을 수행하는 서비스입니다.",
  "action": {
    "default_title": "Modu - 음성 명령 도우미"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],

  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "read-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "현재 페이지 읽기"
    }
  },
  "background": {
    "service_worker": "dist/background.js"
  }
}
